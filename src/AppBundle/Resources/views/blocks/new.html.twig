{% extends '@App/client.html.twig' %}

{% block title %}Блокировки пользователей{% endblock %}
{% block content %}
    <div class="block">
        {{ form_start(form) }}
            <div class="but">
                {{ form_widget(form.submit) }}
                <a class="btn btn-success" href="{{ back }}" role="button">Отмена</a>
            </div>
            <div class="d-sm-flex flex-row">
                <div class="lb">
                    {{ form_label(form.dateStart) }}
                </div>
                <div class="dt">
                    {{ form_widget(form.dateStart) }}
                </div>
            </div>
            <div class="d-sm-flex flex-row">
                <div class="lb">
                    {{ form_label(form.dateEnd) }}
                </div>
                <div class="dt">
                    {{ form_widget(form.dateEnd) }}
                </div>
            </div>
            <div class="tbl">
                <div class="rw">
                    <div class="label">{{ form_label(form.reason) }}</div>
                    <div class="value">{{ form_widget(form.reason) }}</div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}