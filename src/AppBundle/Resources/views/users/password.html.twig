{% extends '@App/client.html.twig' %}

{% block title %}Восстановление пароля{% endblock %}
{% block content %}
    <div class="password d-flex justify-content-center">
        <div class="item">
            {{ form_start(form) }}
                <div class="tbl">
                    <div class="rw">
                        <div class="label">{{ form_label(form.password) }}</div>
                        <div class="value">{{ form_widget(form.password) }}</div>
                    </div>
                </div>
                <div class="but">
                    {{ form_widget(form.submit) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}