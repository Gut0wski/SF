{% extends '@App/client.html.twig' %}

{% block title %}Восстановление пароля{% endblock %}
{% block content %}
    <div class="recover d-flex justify-content-center">
        <div class="item">
            <div class="info">
                Пожалуйста, укажите ваш адрес электронной почты для тправки ссылки с восстановлением пароля
            </div>
            {{ form_start(form) }}
                <div class="tbl">
                    <div class="rw">
                        <div class="label">{{ form_label(form.email) }}</div>
                        <div class="value">{{ form_widget(form.email) }}</div>
                    </div>
                </div>
                <div class="but">
                    {{ form_widget(form.submit) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}