{% extends '@App/client.html.twig' %}

{% block title %}Редактирование главной страницы{% endblock %}
{% block content %}
    <div class="index">
        {{ form_start(form) }}
            <div class="but">
                {{ form_widget(form.submit) }}
                <a class="btn btn-success" href="{{ path('index') }}" role="button">Отмена</a>
            </div>
            <div class="tbl">
                <div class="rw">
                    <div class="label">{{ form_label(form.value) }}</div>
                    <div class="value">{{ form_widget(form.value) }}</div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}